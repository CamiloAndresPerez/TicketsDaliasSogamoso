  const boton10 = document.getElementById("boton-10");
  const boton12 = document.getElementById("boton-12");
  const botonGuardar = document.getElementById("boton-guardar");
  const botonCancelar = document.getElementById("boton-cancelar");

  boton12.addEventListener("click", accionBoton2);
  botonGuardar.addEventListener("click", accionBoton1);
  botonCancelar.addEventListener("click", accionBoton3);
  boton1.addEventListener("click", agregarMensaje);
  boton2.addEventListener("click", agregarCafe);
  boton3.addEventListener("click", agregarTinto);
  boton4.addEventListener("click", agregarJugoNaranja);
  boton5.addEventListener("click", agregarHDuros);
  boton6.addEventListener("click", agregarHFritos);
  boton7.addEventListener("click", agregarHPericos);
  boton8.addEventListener("click", agregarHRevueltos);
  boton9.addEventListener("click", agregarHBlanditos);
