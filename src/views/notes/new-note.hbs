  var mensajeInput = document.getElementById("2");

  function agregarHTibio () {

    var msj = " \n -H. Tibios."
        if (mensajeInput.value.endsWith(msj)) {
          mensajeInput.value = mensajeInput.value.slice(0, -msj.length);
        } else {
          mensajeInput.value += msj;
        }
  }
  function accionBoton3 (){
    
